<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circularRevealFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.constraint.Guideline
      android:id="@+id/guideline1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5"
      />
  <android.support.constraint.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5"
      />
  <FrameLayout
      android:id="@+id/flLeftTop"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@+id/guideline2"
      app:layout_constraintEnd_toEndOf="@+id/guideline1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <FrameLayout
      android:id="@+id/flRightTop"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="@+id/guideline2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline1"
      app:layout_constraintTop_toTopOf="parent"
      />
  <FrameLayout
      android:id="@+id/flLeftBottom"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/guideline1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/guideline2"
      >
    <TextView
        android:id="@+id/tvAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/animation"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvAnimation2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/animation"
        android:textColor="@color/white"
        />

  </FrameLayout>

  <FrameLayout
      android:id="@+id/flRightBottom"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/guideline1"
      app:layout_constraintTop_toBottomOf="@+id/guideline2"
      >

    <TextView
        android:id="@+id/tvAnimator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/animator"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvAnimator2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/animator"
        android:textColor="@color/white"
        />

  </FrameLayout>
</android.support.constraint.ConstraintLayout>