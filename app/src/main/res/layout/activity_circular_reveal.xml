<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_normal"
    tools:ignore="ContentDescription"
    >

  <TextView
      android:id="@+id/textView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="@dimen/margin_normal"
      android:text="@string/circular_reveal"
      app:layout_constraintBottom_toTopOf="@+id/guideline"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="spread"
      />


  <ImageView
      android:id="@+id/ivRed"
      android:layout_width="96dp"
      android:layout_height="96dp"
      android:layout_marginTop="8dp"
      android:src="@drawable/ic_circle_red"
      app:layout_constraintBottom_toTopOf="@+id/imageView"
      app:layout_constraintEnd_toStartOf="@+id/ivYellow"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline"
      app:layout_constraintVertical_chainStyle="packed"
      />

  <ImageView
      android:id="@+id/ivYellow"
      android:layout_width="96dp"
      android:layout_height="96dp"
      android:src="@drawable/ic_circle_yellow"
      app:layout_constraintBottom_toBottomOf="@+id/ivRed"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/ivRed"
      app:layout_constraintTop_toTopOf="@+id/ivRed"
      app:layout_constraintVertical_chainStyle="packed"
      />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="96dp"
      android:layout_height="96dp"
      app:layout_constraintBottom_toTopOf="@+id/ivBlue"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivRed"
      tools:src="@drawable/ic_launcher_background"
      />

  <ImageView
      android:id="@+id/ivBlue"
      android:layout_width="96dp"
      android:layout_height="96dp"
      android:src="@drawable/ic_circle_blue"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/ivGreen"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      />

  <ImageView
      android:id="@+id/ivGreen"
      android:layout_width="96dp"
      android:layout_height="96dp"
      android:src="@drawable/ic_circle_green"
      app:layout_constraintBottom_toBottomOf="@+id/ivBlue"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/ivBlue"
      app:layout_constraintTop_toTopOf="@+id/ivBlue"
      />
  <android.support.constraint.Guideline
      android:id="@+id/guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.10"
      />
</android.support.constraint.ConstraintLayout>