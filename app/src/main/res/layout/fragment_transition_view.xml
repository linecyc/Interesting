<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="transitionViewModel"
        type="com.linecy.interesting.viewmodel.TransitionViewModel"
        />
  </data>
  <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/swipeLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      loading="@{transitionViewModel.isRefreshing}"
      >
    <com.linecy.interesting.ui.misc.ViewContainer
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@android:anim/fade_in"
        android:outAnimation="@android:anim/fade_out"
        app:displayedChildId="@+id/recyclerViewTrans"
        displayedChildStatus="@{transitionViewModel.viewStatus}"
        >
      <android.support.v7.widget.RecyclerView
          android:id="@+id/recyclerViewTrans"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:loadAdapter="@{transitionViewModel.data}"
          />
    </com.linecy.interesting.ui.misc.ViewContainer>
  </android.support.v4.widget.SwipeRefreshLayout>
</layout>